{
  "manifest_version": 3,
  "name": "COMPS.RED - Professional Property Comparison Deck",
  "version": "2.1.0",
  "description": "Professional comparable analysis for Zillow properties - Build your comp deck instantly",
  "permissions": [
    "storage",
    "tabs",
    "sidePanel",
    "downloads",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.zillow.com/*",
    "https://zillow.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.zillow.com/*",
        "https://zillow.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Click to open COMPS.RED panel"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "side_panel": {
    "default_path": "sidepanel-comps.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png", "core/*.js", "decks/*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}